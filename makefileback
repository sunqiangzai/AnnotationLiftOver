cc=/usr/local/Cellar/gcc/7.1.0/bin/g++-7
obj= Cds.o song.o myutil.o myfunctions.o alignNeedlemanForTranscript.o nucleotideCodeSubstitutionMatrix.o alignvarianceToReference.o reAnnotationAndMsa.o model.o parameters.o InputParser.o controlLayer.o
CXXFLAGS =  -std=c++0x -pthread -I ./
song: $(obj)
	$(cc) -o song $(obj)
Cds.o: Cds.cpp
	$(cc) -c Cds.cpp
myutil.o:	myutil.cpp
	$(cc) -c myutil.cpp
myfunctions.o:	myfunctions.cpp
	$(cc) -c myfunctions.cpp
song.o:	song.cpp
	$(cc) -c song.cpp
alignNeedlemanForTranscript.o: alignNeedlemanForTranscript.cpp
	$(cc) -c alignNeedlemanForTranscript.cpp
alignNeedlemanWunsch.o: alignNeedlemanWunsch.cpp
	$(cc) -c alignNeedlemanWunsch.cpp
nucleotideCodeSubstitutionMatrix.o: nucleotideCodeSubstitutionMatrix.cpp
	$(cc) -c nucleotideCodeSubstitutionMatrix.cpp
alignvarianceToReference.o: alignvarianceToReference.cpp
	$(cc) -c alignvarianceToReference.cpp
reAnnotationAndMsa.o: reAnnotationAndMsa.cpp
	$(cc) -c reAnnotationAndMsa.cpp
model.o: model.cpp
	$(cc) -c model.cpp
myMsa.o: myMsa.cpp
	$(cc) -c myMsa.cpp
parameters.o: parameters.cpp
	$(cc) -c parameters.cpp
InputParser.o: InputParser.cpp
	$(cc) -c InputParser.cpp
controlLayer.o: controlLayer.cpp
	$(cc) -c controlLayer.cpp
clean:
	rm -rf *.o song
